{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
<table>


    {# table body #}
    {% for article in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td>{{ article.id }}</td>
            <td>{{ article.text }}</td>
            <td>{{ article.publishedAt |date}}</td>
        </tr>
    {% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>